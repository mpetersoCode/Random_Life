<% provide(:title, @user.name) %>
<div class="row">
<aside class="span4">
	<section>
<a href="<%= user_path(current_user) %>">
 <%= link_to image_tag(current_user.assets[0].photo.url(:small)), photos_user_path(current_user) %>
</a>
<h1>
  <%= current_user.name %>
</h1>
<span>
  <%= pluralize(current_user.microposts.count, "micropost") %>
</span>
</section>
<section>
	<%= render 'shared/micropost_form' %>
</section>
</aside>

<div class="span8 rightsided">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>